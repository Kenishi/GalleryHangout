<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs title="Hangout Starter">
        <Require feature="rpc"/>
        <Require feature="views"/>
        <Require feature="locked-domain"/>
    </ModulePref>
    <Content type="html"
        <![CDATA[
        	<html>
        	<head>
        	<style type="text/css">
        		body {
        			background: black;
        		}
        		
        		#ui-layout-center img {
        			width: 100%;
        		}
        	</style>
       		
       		<script src="http://plus.google.com/hangouts/_/api/v1/hangout.js"></script>
       		<link type="text/css" href="css/jquery.toastmessage.css" rel="stylesheet" />
       		<script src="http://layout.jquery-dev.com/lib/js/jquery.layout-latest.min.js"></script>
       		<script src="toastmessage/jquery.toastmessage.js"></script>
       		<script src="imgur_client.js"></script>
       		<script src="galleryHangout.js"></script>
       		<script>
    			$(document).ready(function () {
        			$('body').layout({ applyDefaultStyles: true });
    			});
    			
    			// Add Drop Zone to west
    			
    			
			</script>
        	</head>
        	
        	<body>
        		<div class="ui-layout-west">
        			<div id="img-list">
        				<div id="img-list-dropzone"></div>
        			</div>        		
        		</div>
        		
        		<div class="ui-layout-center">
        			<img id="img-main-view" src=""
        				style="visibility:hidden"
        				onload=function() {
        					if(this.height > this.width) {
        						this.height = '100%';
        						this.width = 'auto';
        					}
        					this.style.visibility = 'visible';
        				}
        			/>
        		</div>
        		
        	</body>
        	</html>
        ]]></Content>
</Module>